<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% spaceless %}
        <title>
            {% block subtitle %}{% endblock %}
            {% if block('subtitle') is not empty %} | {% endif %}
            {% block site_title %}manivo{% endblock %}
        </title>
    {% endspaceless %}

    <link href="{{ request_uri }}/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="{{ request_uri }}/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="{{ request_uri }}/bower_components/select2/select2.css" rel="stylesheet">
    <link href="{{ request_uri }}/bower_components/angular-ui-select/dist/select.min.css" rel="stylesheet">
    <link href="{{ request_uri }}/css/common.css" rel="stylesheet">
    {% block style_sheets %}
    {% endblock %}
</head>

<body>
{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href=".">{{ block('site_title') }}</a>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div id="content">
            {% block content %}
                <div ng-app="manivo" ng-init="requestUri = {{ request_uri }}">
                    <div ng-view></div>
                </div>
            {% endblock %}
        </div>
    </div>

    <script src="{{ request_uri }}/bower_components/angular/angular.min.js"></script>
    <script src="{{ request_uri }}/bower_components/angular-route/angular-route.min.js"></script>
    <script src="{{ request_uri }}/bower_components/angular-animate/angular-animate.min.js"></script>

    <script src="{{ request_uri }}/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="{{ request_uri }}/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="{{ request_uri }}/bower_components/angular-ui-bootstrap-bower/ui-bootstrap.min.js"></script>
    <script src="{{ request_uri }}/bower_components/select2/select2.min.js"></script>
    <script src="{{ request_uri }}/bower_components/angular-ui-select/dist/select.min.js"></script>

    <script src="{{ request_uri }}/js/app.js"></script>
    <script src="{{ request_uri }}/js/controllers.js"></script>
    <script src="{{ request_uri }}/js/directives.js"></script>
    <script src="{{ request_uri }}/js/services.js"></script>
    {% block scripts %}
    {% endblock %}
{% endblock body %}
</body>
</html>
